@model BranchConnectorViewModel

@{
    ViewBag.Title = "رابط شعبه";
}

@section styles {
    @BundleConfig.AddStyles("~/Content/terminalManageStyles",
        "~/Content/PersianDatePicker.css",
        "~/Content/chosen.css")
}

<div class="page-header">
  
    <h1>رابط شعبه</h1>
</div>
 <script>
 function  Validate()
 {
  
     }
 </script>
<form    method="post" class="form-horizontal" id="frmSearch">
   
 
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label class="control-label col-md-4" for="FirstName"> نام  </label>
                <div class="col-md-8">
                    <input type="text" value="@Model.FirstName" id="FirstName" name="FirstName" class="form-control only-number"  />
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <label class="control-label col-md-4" for="LastName"> نام خانوادگی  </label>
                <div class="col-md-8">
                    <input type="text"  value="@Model.LastName" id="LastName" name="LastName" class="form-control only-number"  />
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label class="control-label col-md-4" for="PhoneNumber"> تلفن همراه  </label>
                <div class="col-md-8">
                    <input type="text" id="PhoneNumber" value="@Model.PhoneNumber" name="PhoneNumber" class="form-control only-number" maxlength="11" />
                </div>
            </div>
        </div>

         
    </div>

   
   
  
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
         
       <button id="btnConfirm" type="button" onclick="handleSubmitClick()" class="btn btn-success btn-lg" data-loading-text="درحال ثبت...">ثبت</button>
        </div>
    </div>
</form>
<script type="text/javascript">
  function  handleSubmitClick()
  {
    
      var firstName =  document.getElementById("FirstName").value ;
      var lastname =  document.getElementById("LastName").value ;
      var PhoneNumber =  document.getElementById("PhoneNumber").value ;
      
      
      
            $.ajax({  
                                                                     url: '/BranchConnector/Edit',  
                                                                     type: "POST", 
                                                                     data: JSON.stringify( 
                                                                         {
                                                                                                                                                             
                                                                                 FirstName : firstName  ,
                                                                                            LastName : lastname    ,
                                                                                                   PhoneNumber :PhoneNumber
                                                                                                                                                             }
                                                                                                                                                             
                                                                     ),
                                                                       
                                                                      async: true, 
                                                                     contentType: "application/json; charset=utf-8",
                                                                     
                                                                     success: function (result) {  
                                                                         
                                                                      
    toastr.success("با موفقیت انجام شد");
                                                                          //  $button.button('reset');
                                                                     },  
                                                                     error: function (err) {  
                                                  toastr.error("بروز خطا");             
                                                                         //$button.button('reset');
                                                                                                                 
                                                                             
                                                                     }  
                                                                 });
            
      }
</script>