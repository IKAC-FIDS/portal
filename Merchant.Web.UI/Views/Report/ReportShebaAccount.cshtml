                        console.log('xcvxcvxcvzxcvzxvc', result.data.rows);
                           for (let i = 0; i < result.data.rows.length; i++) {


                                                            var item = result.data.rows[i];


                                                            html += '<div class="row" data-terminal-id="' + item.terminalId + '" data-status-id="' + item.statusId + '">' +

