@model DocumentTypeViewModel

@{
    ViewBag.PageTitle = "ویرایش نوع فایل";
    Layout = "~/Views/Shared/_ModalLayout.cshtml";
}

<form action="@Url.Action("Edit", "DocumentType")" method="post" class="form-horizontal" id="DocumentTypeEditForm">
    <input type="hidden" id="Id" name="Id" value="@Model.Id" />

    <div class="form-group">
        <label class="control-label col-md-3 required" for="Title">نام</label>
        <div class="col-md-9">
            <input type="text" id="Title" name="Title" class="form-control" maxlength="100" value="@Model.Title" autocomplete="off" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-3 required">نوع</label>
        <div class="col-md-9">
            <div class="btn-group btn-group-sm" data-toggle="buttons">
                <label class="btn btn-default @(Model.IsRequired ? "active" : "")">
                    <input type="radio" name="IsRequired" value="true" @(Model.IsRequired ? "checked" : "")> اجباری
                </label>
                <label class="btn btn-default @(!Model.IsRequired ? "active" : "")">
                    <input type="radio" name="IsRequired" value="false" @(!Model.IsRequired ? "checked" : "")> غیر اجباری
                </label>
            </div>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-3 required">حقیقی / حقوقی</label>
        <div class="col-md-9">
            <div class="btn-group btn-group-sm" data-toggle="buttons">
                <label class="btn btn-default @(Model.IsForLegalPersonality.HasValue && !Model.IsForLegalPersonality.Value ? "active" : "")">
                    <input type="radio" name="IsForLegalPersonality" value="false" @(Model.IsForLegalPersonality.HasValue && !Model.IsForLegalPersonality.Value ? "checked" : "")> حقیقی
                </label>
                <label class="btn btn-default @(Model.IsForLegalPersonality.HasValue && Model.IsForLegalPersonality.Value ? "active" : "")">
                    <input type="radio" name="IsForLegalPersonality" value="true" @(Model.IsForLegalPersonality.HasValue && Model.IsForLegalPersonality.Value ? "checked" : "")> حقوقی
                </label>
                <label class="btn btn-default @(!Model.IsForLegalPersonality.HasValue ? "active" : "")">
                    <input type="radio" name="IsForLegalPersonality" value="" @(!Model.IsForLegalPersonality.HasValue ? "checked" : "")> همه
                </label>
            </div>
        </div>
    </div>

    <hr />

    <div class="row">
        <div class="col-sm-12">
            <input type="submit" value="ثبت" id="ConfirmButton" data-loading-text="در حال ثبت..." class="btn btn-success btn-lg" />
            <button type="button" class="btn btn-default btn-lg" data-dismiss="modal">انصراف</button>
        </div>
    </div>
</form>

<script type="text/javascript">
    $(document).ready(function () {
        $('#DocumentTypeEditForm').validate({
            rules: {
                Title: { required: true, maxlength: 500 }
            },
            submitHandler: function (form) {
                var $button = $('#ConfirmButton', '#DocumentTypeEditForm');
                $button.button('loading');

                $(form).ajaxSubmit({
                    success: function (result) {
                        $button.button('reset');
                        $.processMessage(result);

                        if (result.success) {
                            $.closeModal('ok');
                        }
                    }, error: function (result) {
                        $button.button('reset');
                        $.processMessage(result);
                    }
                });

                return false;
            }
        });
    });
</script>