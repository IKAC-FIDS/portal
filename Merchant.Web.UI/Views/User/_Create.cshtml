@{
    ViewBag.PageTitle = "ثبت کاربر جدید";
    Layout = "~/Views/Shared/_ModalLayout.cshtml";
}

<form action="@Url.Action("Create", "User")" method="post" class="form-horizontal" id="UserCreateForm">
    <div class="form-group">
        <label class="control-label col-md-4 required" for="FullName">نام و نام خانوادگی</label>
        <div class="col-md-8">
            <input type="text" id="FullName" name="FullName" class="form-control" autocomplete="off" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-4 required" for="UserName">نام کاربری</label>
        <div class="col-md-8">
            <input type="text" id="UserName" name="UserName" class="form-control" autocomplete="off" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-4 required" for="BranchId">واحد سازمانی</label>
        <div class="col-md-8">
            @Html.DropDownList("BranchId", (IEnumerable<SelectListItem>)ViewBag.BranchList, "انتخاب نمایید", new { @class = "chosen-select chosen-rtl", tabindex = "1", autofocus = "autofocus" })
        </div>
    </div>
        <div class="form-group">
            <label class="control-label col-md-4 required" for="PhoneNumber"> تلفن همراه  </label>
            <div class="col-md-8">
                <input type="text" id="PhoneNumber" name="PhoneNumber" class="form-control" autocomplete="off" />
            </div>
        </div>

    <div class="form-group">
        <label class="control-label col-md-4 required" for="NewPassword">رمز عبور</label>
        <div class="col-md-8">
            <input type="password" id="NewPassword" name="NewPassword" class="form-control" maxlength="50" autocomplete="off" />
        </div>
    </div>
    
    <div class="form-group">
        <label class="control-label col-md-4 required" for="ConfirmNewPassword">تکرار رمز عبور</label>
        <div class="col-md-8">
            <input type="password" id="ConfirmNewPassword" name="ConfirmNewPassword" class="form-control" maxlength="50" autocomplete="off" />
        </div>
    </div>
    
    <hr />

    <div class="row">
        <div class="col-sm-12">
            <input type="submit" value="ثبت" id="ConfirmButton" data-loading-text="در حال ثبت..." class="btn btn-success btn-lg" />
            <button type="button" class="btn btn-default btn-lg" data-dismiss="modal">انصراف</button>
        </div>
    </div>
</form>

<script type="text/javascript">
    $(document).ready(function () {
        $('.only-number', '#UserCreateForm').filter_input({ regex: '[0-9]' });
        $('#FullName', '#UserCreateForm').filter_input({ regex: "^[ا-یآ-ئ\'\'-\'\\s]{1,40}$" });
        $('#BranchId', '#UserCreateForm').chosen({ width: "100%" });

        $('.chosen-select', '#UserCreateForm').on('change', function () {
            $(this).valid();
        });

        $('#UserCreateForm').validate({
            rules: {
                FullName: { required: true, maxlength: 500 },
                PhoneNumber: { digits: true, maxlength: 11, minlength: 11 },
                NewPassword: { required: true, maxlength: 50 },
                ConfirmNewPassword: { required: true, maxlength: 50, equalTo: "#NewPassword" },
                Email: { required: true, email: true }
            },
            submitHandler: function (form) {
                var $button = $('#ConfirmButton', '#UserCreateForm');
                $button.button('loading');

                $(form).ajaxSubmit({
                    success: function (result) {
                        $button.button('reset');
                        $.processMessage(result);

                        if (result.success) {
                            $.closeModal('ok');
                        }
                    }, error: function (result) {
                        $button.button('reset');
                        $.processMessage(result);
                    }
                });

                return false;
            }
        });
    });
</script>