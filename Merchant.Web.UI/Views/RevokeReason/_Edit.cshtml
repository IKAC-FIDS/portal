@model RevokeReasonViewModel

@{
    ViewBag.PageTitle = "ویرایش دلیل جمع آوری";
    Layout = "~/Views/Shared/_ModalLayout.cshtml";
}

<form action="@Url.Action("Edit", "RevokeReason")" method="post" class="form-horizontal" id="RevokeReasonEditForm">
    <input type="hidden" id="Id" name="Id" value="@Model.Id" />

    <div class="form-group">
        <label class="control-label col-md-3 required" for="Title">عنوان</label>
        <div class="col-md-9">
            <input type="text" id="Title" name="Title" class="form-control" maxlength="500" value="@Model.Title" autocomplete="off" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-3 required">نوع</label>
        <div class="col-md-9">
            <div class="btn-group btn-group-sm" data-toggle="buttons">
                <label class="btn btn-default @(Model.Level == 1 ? "active" : "")">
                    <input type="radio" name="Level"   id="levelB"  value="1" @(Model.Level == 1 ? "checked" : "")> دلیل اول
                </label>
                <label class="btn btn-default @(Model.Level == 2 ? "active" : "")">
                    <input type="radio" name="Level"  id="levelC"  value="2" @(Model.Level == 2 ? "checked" : "")> دلیل دوم
                </label>
            </div>
        </div>
    </div>
   <div id="PspIdSection" class="col-md-12 form-group ">
                 <label class="control-label col-md-3     " for="parentId"> انتخاب دلیل اول    </label>
                 <div class="col-md-9">
                     @Html.DropDownList("parentId", (IEnumerable<SelectListItem>)ViewBag.ParentList, "انتخاب نمایید", 
                         new { Id="parentId", @class =  "chosen-select form-control" ,    })
                 </div>
             </div>
    <hr />

    <div class="row">
        <div class="col-sm-12">
            <input type="submit" value="ثبت" id="ConfirmButton" data-loading-text="در حال ثبت..." class="btn btn-success btn-lg" />
            <button type="button" class="btn btn-default btn-lg" data-dismiss="modal">انصراف</button>
        </div>
    </div>
</form>

<script type="text/javascript">
    $(document).ready(function () {
         
                                  
               if (@Model.Level ===  1)
                   {
                        
                         $("#parentId").attr("disabled","disabled"); 
                       }
          $("#levelB").change(function () {
                                   var  level = $("#levelB").is(':checked');
                                                               if (level)
                                                                   {
                                                                    
                                                                            $("#parentId").attr("disabled","disabled"); 
                                                                       }
                              });
                  $("#levelC").change(function () {
                       
                         var  level = $("#levelC").is(':checked');
                                       if (level)
                                           {
                                                    $("#parentId").removeAttr("disabled", "disabled"); 
                                               }
                                               
                      });
                  
                  
        $('#RevokeReasonEditForm').validate({
            rules: {
                Title: { required: true, maxlength: 500 },
                Level: { required: true }
            },
            submitHandler: function (form) {
                var $button = $('#ConfirmButton', '#RevokeReasonEditForm');
                $button.button('loading');

                $(form).ajaxSubmit({
                    success: function (result) {
                        $button.button('reset');
                        $.processMessage(result);

                        if (result.success) {
                            $.closeModal('ok');
                        }
                    }, error: function (result) {
                        $button.button('reset');
                        $.processMessage(result);
                    }
                });

                return false;
            }
        });
    });
</script>