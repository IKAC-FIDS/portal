@model DeviceTypeViewModel

@{
    ViewBag.PageTitle = "ویرایش نوع دستگاه";
    Layout = "~/Views/Shared/_ModalLayout.cshtml";
}

    <form action="@Url.Action("Edit", "DeviceType")" method="post" class="form-horizontal" id="DeviceTypeEditForm">
        <input type="hidden" id="Id" name="Id" value="@Model.Id" />

        <div class="form-group">
            <label class="control-label col-md-3 required" for="Code">کد</label>
            <div class="col-md-9">
                <input type="text" id="Code" name="Code" class="form-control" maxlength="10" value="@Model.Code" autocomplete="off" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-3 required" for="Title">نام</label>
            <div class="col-md-9">
                <input type="text" id="Title" name="Title" class="form-control" maxlength="100" value="@Model.Title" autocomplete="off" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-3" for="BlockPrice">مبلغ مسدودی</label>
            <div class="col-md-9">
                <input type="text" id="BlockPrice" name="BlockPrice" class="form-control only-number" maxlength="10" value="@Model.BlockPrice" autocomplete="off" />
                <small class="help-block">با مبلغ مسدودی بزرگتر از صفر پر کردن اطلاعات مسدودی در ثبت پذیرنده اجباری خواهد بود</small>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-3 required">نوع</label>
            <div class="col-md-9">
                <div class="btn-group btn-group-sm" data-toggle="buttons">
                    <label class="btn btn-default @(Model.IsWireless ? "active" : "")">
                        <input type="radio" name="IsWireless" value="true" @(Model.IsWireless ? "checked" : "")> سیار
                    </label>
                    <label class="btn btn-default @(!Model.IsWireless ? "active" : "")">
                        <input type="radio" name="IsWireless" value="false" @(!Model.IsWireless ? "checked" : "")> ثابت
                    </label>
                </div>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-3 required">وضعیت</label>
            <div class="col-md-9">
                <div class="btn-group btn-group-sm" data-toggle="buttons">
                    <label class="btn btn-default @(Model.IsActive ? "active" : "")">
                        <input type="radio" name="IsActive" value="true" @(Model.IsActive ? "checked" : "")> فعال
                    </label>
                    <label class="btn btn-default @(!Model.IsActive ? "active" : "")">
                        <input type="radio" name="IsActive" value="false" @(!Model.IsActive ? "checked" : "")> غیر فعال
                    </label>
                </div>
            </div>
        </div>

        <hr />

        <div class="row">
            <div class="col-sm-12">
                <input type="submit" value="ثبت" id="ConfirmButton" data-loading-text="در حال ثبت..." class="btn btn-success btn-lg" />
                <button type="button" class="btn btn-default btn-lg" data-dismiss="modal">انصراف</button>
            </div>
        </div>
    </form>

<script type="text/javascript">
    $(document).ready(function () {
        $('.only-number', '#DeviceTypeEditForm').filter_input({ regex: '[0-9]' });

        $('#DeviceTypeEditForm').validate({
            rules: {
                Code: { required: true },
                Title: { required: true, maxlength: 500 }
            },
            submitHandler: function (form) {
                var $button = $('#ConfirmButton', '#DeviceTypeEditForm');
                $button.button('loading');

                $(form).ajaxSubmit({
                    success: function (result) {
                        $button.button('reset');
                        $.processMessage(result);

                        if (result.success) {
                            $.closeModal('ok');
                        }
                    }, error: function (result) {
                        $button.button('reset');
                        $.processMessage(result);
                    }
                });

                return false;
            }
        });
    });
</script>