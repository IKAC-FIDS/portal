@model RevokeRequestViewModel

@{
    ViewBag.PageTitle = "درخواست جمع آوری";
    Layout = "~/Views/Shared/_ModalLayout.cshtml";
}

<form class="form-horizontal" action="@Url.Action("Edit", "RevokeRequest")" method="post" id="RevokeRequestCreateForm">
    <input type="hidden" id="TerminalNo" name="TerminalNo" value="@ViewBag.TerminalNo" />
  <input type="hidden" id="Id" name="Id" value="@Model.Id" />

    <div class="form-group">
        <label class="control-label col-md-3 required" for="ReasonId">دلیل اول</label>
        <div class="col-md-8">
            @Html.DropDownList("ReasonId", (IEnumerable<SelectListItem>)ViewBag.ReasonList, "انتخاب نمایید", new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-3 required" for="SecondReasonId">دلیل دوم</label>
        <div class="col-md-8">
            @Html.DropDownList("SecondReasonId", (IEnumerable<SelectListItem>)ViewBag.SecondReasonList, "انتخاب نمایید", 
                new { @class = "form-control"  })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-3" for="DeliveryDescription">زمان و محل مراجعه جهت تحویل دستگاه</label>
        <div class="col-md-9">
            <textarea id="DeliveryDescription" name="DeliveryDescription" class="form-control" rows="5"></textarea>
        </div>
    </div>

    <hr />

    <div class="row">
        <div class="col-sm-12">
            <button id="ConfirmButton" type="submit" class="btn btn-success btn-lg" data-loading-text="درحال ثبت...">ثبت</button>
            <button type="button" class="btn btn-default btn-lg" data-dismiss="modal">انصراف</button>
        </div>
    </div>
</form>

<script type="text/javascript">
    $(document).ready(function () {
        
               $("#ReasonId").change(function () {
                                      var categoryId = $(this).val();
                                      $.getJSON("../RevokeReason/LoadSecond", { id: categoryId },
                                          function (classesData) {
                                             $("#SecondReasonId").removeAttr("disabled", "disabled"); 
                                              var select = $("#SecondReasonId");
                                              select.empty();
                                              select.append($('<option/>', {
                                                  value: 0,
                                                  text: "انتخاب نمایید"
                                              }));
                                              $.each(classesData, function (index, itemData) {
                                                  select.append($('<option/>', {
                                                      value: itemData.Value,
                                                      text: itemData.Text
                                                  }));
                                              });
                                          });
                                  });
               
        $('#RevokeRequestCreateForm').validate({
            rules: {
                ReasonId: { required: true },
                SecondReasonId: { required: true }
            },
            submitHandler: function (form) {
                var $button = $('#ConfirmButton', '#RevokeRequestCreateForm');
                $button.button('loading');

                $.showConfirm({
                    onConfirm: function () {
                        $(form).ajaxSubmit({
                            success: function (result) {
                                $button.button('reset');
                                $.processMessage(result);

                                if (result.success) {
                                    $.closeModal('ok');
                                }
                            }, error: function (result) {
                                $button.button('reset');
                                $.processMessage(result);
                            }
                        });
                    }
                });

                return false;
            }
        });
    });
</script>